<div class="container" style="margin:150px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <label>Imagen principal: <input type="file" class="form-control" name="imagen_principal" id="imagen_principal"> </label>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen 1: <input type="file" class="form-control" name="imagen_1" id="imagen_1"> </label>
                </div>
                                <div class="form-group">
                    <label>Imagen 2: <input type="file" class="form-control" name="imagen_2" id="imagen_2"> </label>
                </div>
                                <div class="form-group">
                    <label>Imagen 3: <input type="file" class="form-control" name="imagen_3" id="imagen_3"> </label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p class="mensajeError">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>