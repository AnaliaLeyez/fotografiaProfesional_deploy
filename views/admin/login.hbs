  <div class="container">
    <div class="row" style="margin:200px 0">
        <div class="col">
            <form action="/admin/login" method="post">
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario" placeholder="Usuario" aria-describedby="emailHelp" name="usuario">
            </div>
            <div class="form-group">
                <label for="password">Constraseña</label>
                <input type="password" class="form-control" id="password" placeholder="Constraseña" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>
            {{#if error}}
            <br>
            <p>Usuario o contraseña incorrecto!</p>
            {{/if}}
        </div>
    </div>
  </div>